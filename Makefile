test:
	@echo "////////////////////////////////////////////////////////////////////////////////"
	@docker-compose -f ./env/docker-compose.yml up --build -d
	@echo "////////////////////////////////////////////////////////////////////////////////"
	@sleep 5s
	@echo "\nRun unit tests:\n"
	@go test -failfast -timeout 10s -v ./tests/unit_test.go
	@echo "\n////////////////////////////////////////////////////////////////////////////////"
	@docker-compose -f ./env/docker-compose.yml down
	@echo "////////////////////////////////////////////////////////////////////////////////"